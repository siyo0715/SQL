SELECT カラム名(列指定)
FROM テーブル名
WHERE 条件式(行指定);
--------------------------------------------------------

SELECT *
FROM test_table
WHERE id = 2;
(IDが2の列のみ抽出)

---------------------------------------------------------

SELECT *
FROM test_table
WHERE id <= 2;
(IDが2以下の列のみ抽出)

---------------------------------------------------------

SELECT *
FROM test_table
WHERE id != 2;
(IDが2以外の列のみ抽出)

---------------------------------------------------------

SELECT *
FROM test_table
WHERE 商品名 = 'ニット';
(ニットの列のみ抽出)

---------------------------------------------------------

SELECT *
FROM test_table
WHERE 商品名 != 'ニット';
(ニット以外の列のみ抽出)

---------------------------------------------------------
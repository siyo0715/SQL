SELECT カラム名)
FROM テーブル名
ORDER BY 並び替え条件;
--------------------------------------------------------

SELECT *
FROM test_table;
ORDER BY 売上金額 ASC(昇順)⇦ASCは省略可能;

--------------------------------------------------------

SELECT *
FROM test_table;
ORDER BY DESC (降順);

--------------------------------------------------------

SELECT *
FROM TEST_TABLE;
ORDER BY 売上金額 , 売上日;

--------------------------------------------------------
どちらか片方を降順にできる

SELECT *
FROM TEST_TABLE;
ORDER BY 売上金額 DESC, 売上日 ASC;

--------------------------------------------------------

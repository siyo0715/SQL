SELECT グルーピングするカラム、集計関数(集計対象カラム)
FROM テーブル名
WHERE 条件式
GROUP BY グルーピングをするカラム
HAVING 集計関数(集計対象カラム)で条件式
ORDER BY ソート条件;
-------------------------------------------------------------

SELECT
    商品名
    ,sum(売上金額)
FROM test_table
GROUP BY 商品名
HAVING sum(売上金額)>=1000000

-------------------------------------------------------------

